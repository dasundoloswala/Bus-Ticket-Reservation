	</header>


    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title" align="center">Update Route Details</h2>
                    <form  action="UpdateRouteServlet" method="post">
                      <div class="row row-space">
                            <div class="">
                                <div class="input-group">
                                    <label class="label">Route Number</label>
                                    <input readonly class="input--style-4" type="text" name="routenumber"  value="<%= route.getRoutenumber() %>" >
                                </div>
                            </div>
							<br>                          
                        </div>						
                        <div class="row row-space">
                            <div class="">
                                <div class="input-group">
                                    <label class="label">Rout Source</label>
                                    
                                    <input class="input--style-4" type="text" name="source"  placeholder="Type new Source" value="<%= route.getSource() %>" >
                                </div>
                            </div>
							<br>                          
                        </div>
                        
                        <div class="row row-space">                                           						 
                            <div class="">
                               <div class="input-group">
                                    <label class="label">Destination</label>
                                    <input class="input--style-4" type="text" name="destination" placeholder="Type new Destination" value="<%= route.getDestination() %> ">
                              </div>
                               </div>
                        
                        </div>
                      
						   <div class="row row-space">
                            <div class="">
                               <div class="input-group">
                                    <label class="label">Travel Time</label>
                                    <input class="input--style-4" type="text" name="traveltime"  placeholder="Type new Travel time" value="<%=route.getTraveltime()  %> "  >
                              </div>
                            </div>                          
                      </div>
						
						
                      <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    
